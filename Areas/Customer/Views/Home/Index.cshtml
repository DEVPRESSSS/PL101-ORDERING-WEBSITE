@model IEnumerable<ProductVM>

<section class="product-section shadow-sm p-2 h-100">
    <div class="container">
        <div class="row">
            @foreach (var productVM in Model)
            {
                <div class="col-3 mb-4">
                    <!-- Added mb-4 for margin-bottom -->
                    <div class="card shadow-sm border-0 h-100">
                        <!-- Added h-100 to make cards equal height -->
                        <!-- Card Image -->
                        <div class="card-img d-flex justify-content-center align-items-center" style="height: 200px; overflow: hidden;">
                            <!-- Fixed height and overflow hidden -->
                            @foreach (var imageUrl in productVM.ImageUrls)
                            {
                                <img src="@imageUrl" alt="@productVM.Product.Name" class="img-fluid" style="width: 100%; height: 100%; object-fit: cover;" /> <!-- Ensures consistent image sizing -->
                            }
                        </div>

                        <!-- Card Body -->
                        <div class="card-body text-center">
                            <h5 class="card-title">@productVM.Product.Name</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@productVM.Product.Price</h6>
                            <h6 class="card-text text-muted">@productVM.Product.Size</h6>
                        </div>

                        <!-- Card Footer -->
                        <div class="card-footer bg-transparent border-0">
                            <a class="btn btn-primary w-100 rounded-2" asp-area="Customer" asp-controller="Home" asp-action="ProductDetails" asp-route-id="@productVM.Product.ProductID">Buy</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>