@model Products

<div class="container mt-4" style="max-width: 1200px;">
    <div class="card border-0 shadow-lg overflow-hidden">
        <!-- Back Button -->
        <div class="position-absolute top-0 end-0 m-3">
            <a asp-action="Index" class="btn btn-light btn-lg rounded-circle shadow-sm">
                <i class="bi bi-x-lg text-secondary"></i>
            </a>
        </div>

        <div class="row g-0">
            <!-- Image Gallery -->
            <div class="col-md-6 p-4" style="background-color: #f5ece1;">
                <div class="position-relative" style="padding-top: 100%;">
                    <img src="~/Images/Jim.jpg"
                         class="position-absolute top-0 start-0 w-100 h-100 object-fit-cover rounded-3"
                       
                         style="transition: transform 0.3s ease;"
                         onmouseover="this.style.transform='scale(1.02)'"
                         onmouseout="this.style.transform='scale(1)'">
                </div>
                <div class="d-flex gap-2 mt-4">
                    <!-- Thumbnails -->
                    <div class="thumbnail" style="width: 60px; height: 60px;">
                        <img src="~/Images/DessertAndCoffee.jpg" class="w-100 h-100 object-fit-cover rounded-2 cursor-pointer">
                    </div>
                    <div class="thumbnail" style="width: 60px; height: 60px;">
                        <img src="~/Images/DessertAndCoffee.jpg" class="w-100 h-100 object-fit-cover rounded-2 cursor-pointer">
                    </div>
                </div>
            </div>

            <!-- Coffee Details -->
            <div class="col-md-6 p-5 d-flex flex-column" style="background-color: #fff8f0;">
                <h1 class="display-5 fw-bold mb-3" style="color: #3e2723;">@Model.Name</h1>

                <!-- Origin & Roast 
                <div class="d-flex gap-3 mb-4">
                    <div class="badge bg-warning text-dark ">Single Origin</div>
                    <div class="badge bg-dark text-white">Medium Roast</div>
                    <div class="badge bg-success">Arabica</div>
                </div>
                -->
                <!-- Price Section -->
                <div class="d-flex align-items-center gap-3 mb-4">
                    <h2 class="text-primary mb-0" style="color: #6d4c41;">₱@Model.Price.ToString("N2")</h2>
                    <small class="text-muted">/ @Model.Size</small>
                </div>

                <!-- Add Ons Notes -->
                <div class="mb-4">
                    <h5 class="text-uppercase text-muted mb-3">Add Ons</h5>
                    <div class="d-flex gap-2">
                        <div class="tasting-note">🍫 Espresso</div>
                        <div class="tasting-note">🍒 Milo Powder</div>
                        <div class="tasting-note">🌰 Oreo Powder</div>
                    </div>
                </div>

                <!-- Grind Options -->
                <div class="mb-4">
                    <h5 class="text-uppercase text-muted mb-3">Grind Type</h5>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary py-2 px-3 rounded-3">Whole Bean</button>
                        <button class="btn btn-primary py-2 px-3 rounded-3">Ground</button>
                    </div>
                </div>

                <!-- Subscription Option
                <div class="mb-4 p-3 rounded" style="background-color: #fff0e0;">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="subscribe">
                        <label class="form-check-label" for="subscribe">
                            📦 Subscribe & Save (15% off)
                            <br>
                            <small class="text-muted">Delivered fresh every 2 weeks</small>
                        </label>
                    </div>
                </div>
                 -->
                <!-- Add to Cart -->
                <div class="d-flex gap-3 mb-4">
                    <div class="input-group w-50">
                        <button class="btn btn-outline-secondary">-</button>
                        <input type="number" class="form-control text-center" value="1">
                        <button class="btn btn-outline-secondary">+</button>
                    </div>
                    <button class="btn btn-primary btn-lg flex-grow-1 py-3" style="background-color: #6d4c41; border: none;">
                        ☕ Add to Cart
                    </button>
                </div>

                <!-- Coffee Details -->
                <div class="mt-auto">
                    <div class="row g-3">
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-globe fs-4" style="color: #6d4c41;"></i>
                                <div>
                                    <small class="text-muted">Origin</small>
                                    <div class="fw-500">Ethiopia, Yirgacheffe</div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="d-flex align-items-center gap-2">
                                <i class="bi bi-thermometer-sun fs-4" style="color: #6d4c41;"></i>
                                <div>
                                    <small class="text-muted">Roast Date</small>
                                    <div class="fw-500">@DateTime.Now.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    :root {
        --coffee-primary: #6d4c41;
        --coffee-secondary: #d7ccc8;
    }

    .thumbnail {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
        border: 2px solid transparent;
    }

        .thumbnail:hover {
            transform: translateY(-2px);
            border-color: var(--coffee-primary);
        }

    .tasting-note {
        padding: 6px 12px;
        background: #fff0e0;
        border-radius: 20px;
        font-size: 0.9rem;
    }

    .btn-primary {
        background-color: var(--coffee-primary);
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #5d4037;
            transform: translateY(-2px);
        }
</style>