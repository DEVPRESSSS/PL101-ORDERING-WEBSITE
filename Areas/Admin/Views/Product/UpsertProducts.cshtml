@model Products

<div class="card">
	<div class="row pb-2">
	
		<h2 class="text-dark text-center m-2">Create Product</h2>
		

	</div>

	<div class="card-body p-4">
		<form method="post" enctype="multipart/form-data">

			<div class="border p-2 mt-4">


				<div class="mb-2">
					<label asp-for="Name" class="p-0"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="mb-2">
					<label asp-for="Description" class="p-0"></label>
					<input asp-for="Description" class="form-control" />
					<span asp-validation-for="Description" class="text-danger"></span>
				</div>

				<div class="mb-2">
					<label asp-for="Price" class="p-0"></label>
					<input asp-for="Price" class="form-control" />
					<span asp-validation-for="Price" class="text-danger"></span>
				</div>

				<div class="mb-2">
					<label asp-for="Size" class="p-0"></label>
					<input asp-for="Size" class="form-control" />
					<span asp-validation-for="Size" class="text-danger"></span>
				</div>

				<div class="mb-2">
					<label asp-for="Stock" class="p-0"></label>
					<input asp-for="Stock" class="form-control" />
					<span asp-validation-for="Stock" class="text-danger"></span>
				</div>

				<div class="mb-2">
					<label asp-for="@Model.Category_ID" class="p-0">Category</label>
					<select asp-for="@Model.Category_ID" class="form-select" asp-items="@(ViewBag.CategoryList)">
						<option value="">-- Select Category --</option>
					</select>
					<span asp-validation-for="@Model.Category_ID" class="text-danger"></span>
				</div>

		

				<div class="mb-2">
					<label asp-for="@Model.ListOfProductImages" class="p-0"></label>
					<input type="file" name="files" asp-for="ListOfProductImages" class="form-control" multiple />
					<span asp-validation-for="ListOfProductImages" class="text-danger"></span>
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Submit</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to list</a>
					</div>
				</div>



			</div>

		</form>

	</div>
</div>


