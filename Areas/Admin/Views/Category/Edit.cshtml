@model Category

<div class="card">
	<div class="row pb-2">
		<h2 class="text-dark text-center m-2">Edit Category</h2>

	</div>

	<div class="card-body p-4">
		<form method="post">
			<input asp-for="CategoryID" hidden/>
			<div class="border p-2 mt-4">


				<div class="mb-2">
					<label asp-for="Name" class="p-0"></label>
					<input asp-for="Name" class="form-control" />
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>

				<div class="row">
					<div class="col-6 col-md-3">
						<button type="submit" class="btn btn-primary form-control">Submit</button>
					</div>
					<div class="col-6 col-md-3">
						<a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">Back to list</a>
					</div>
				</div>



			</div>

		</form>

	</div>
</div>



